{% extends "layout.njk" %}

{% block title %}Kainos Job Portal - Find Your Next Career Opportunity{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <div class="min-h-96 bg-gradient-to-r from-blue-50 to-purple-50 flex items-center justify-center">
        <div class="text-center px-4">
            <div class="max-w-2xl mx-auto">
                <h1 class="text-5xl font-bold text-gradient mb-6">{{ title }}</h1>
                <p class="text-xl text-gray-700 mb-8">{{ message }}</p>
                <button class="btn bg-blue-600 hover:bg-blue-700 text-white border-none btn-lg">Explore Jobs</button>
            </div>
        </div>
    </div>

    <!-- Latest Jobs Section -->
    <div class="container mx-auto px-4 py-16">
        <h2 class="text-3xl font-bold text-center mb-12">Latest Jobs</h2>
        {% if latestJobs and latestJobs.length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for job in latestJobs %}
                    <!-- Job Card -->
                    <div class="card bg-base-100 shadow-xl feature-card">
                        <div class="card-body">
                            <h2 class="card-title text-xl font-bold text-gray-800 mb-4">{{ job.name }}</h2>
                            <div class="space-y-3 mb-6">
                                <div class="flex items-center text-gray-600">
                                    <i data-lucide="map-pin" class="h-5 w-5 mr-3 text-blue-600"></i>
                                    <span class="text-sm">{{ job.location }}</span>
                                </div>
                                <div class="flex items-center text-gray-600">
                                    <i data-lucide="building" class="h-5 w-5 mr-3 text-purple-600"></i>
                                    <span class="text-sm">{{ job.capability }}</span>
                                </div>
                                <div class="flex items-center text-gray-600">
                                    <i data-lucide="badge" class="h-5 w-5 mr-3 text-green-600"></i>
                                    <span class="text-sm">{{ job.band }}</span>
                                </div>
                                <div class="flex items-center text-red-600 font-medium">
                                    <i data-lucide="calendar" class="h-5 w-5 mr-3"></i>
                                    <span class="text-sm">Closes: {{ job.closingDate }}</span>
                                </div>
                            </div>
                            <div class="card-actions justify-center">
                                <button class="btn bg-blue-600 hover:bg-blue-700 text-white border-none w-full">Apply Now</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center mt-8">
                <a href="/jobs" class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200">
                    <span class="text-white">View All Jobs</span>
                    <i data-lucide="arrow-right" class="h-5 w-5 ml-2 text-white"></i>
                </a>
            </div>
        {% else %}
            <div class="text-center py-16">
                <i data-lucide="briefcase" class="h-16 w-16 text-gray-400 mx-auto mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Jobs Available</h3>
                <p class="text-gray-600">Check back soon for new career opportunities at Kainos!</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
